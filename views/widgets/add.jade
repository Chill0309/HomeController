extends ../layout

block content
  h1 Add Widget
  form(method="POST"
    action="/widgets/create"
    enctype="application/x-www-form-urlencoded")
    p Widget SN:
      input(type="text"
        name="widgetsn"
        id="widgetsn"
        size="25"
        required)
    p Widget Name:
      input(type="text"
        name="widgetname"
        id="widgetname"
        size="25"
        required)
    p Widget Price:
      input(type="text"
        name="widgetprice"
        id="widgetname"
        size="25"
        pattern="="^\$?([0-9]{1,3},([0-9]{3},)*[0-9]{3}|[0-9]+)(.[0-9][0-9])?$"
        required)
    p Widget Description
      br
      textarea(name="widgetdesc"
        id="widgetdesc"
        cols="20"
        rows="5")
    p 
      input(type="submit"
        name="submit"
        id="submit"
        value="Submit")
      input(type="reset"
        name="reset"
        id="reset"
        value="Reset")
